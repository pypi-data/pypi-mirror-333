{
  "$id": "collection.json",
  "title": "Collection",
  "type": "object",
  "description": "A collection of projects",
  "properties": {
    "version": {
      "type": "number"
    },
    "name": {
      "type": "string"
    },
    "display_name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "projects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["version", "name", "display_name", "projects"]
}
