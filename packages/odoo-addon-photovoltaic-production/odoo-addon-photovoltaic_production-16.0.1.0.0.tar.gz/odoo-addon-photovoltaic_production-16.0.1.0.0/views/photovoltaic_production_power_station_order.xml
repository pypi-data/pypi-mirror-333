<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="photovoltaic_production_power_station_order_view_tree" model="ir.ui.view">
    <field name="name">photovoltaic_production_power_station_order.tree</field>
    <field name="model">photovoltaic.production.power.station.order</field>
    <field name="arch" type="xml">
      <tree default_order="position">
        <field name="position" />
        <field name="plant" />
      </tree>
    </field>
  </record>

  <record id="photovoltaic_production_power_station_order_view_search" model="ir.ui.view">
    <field name="name">photovoltaic_production_power_station_order.search</field>
    <field name="model">photovoltaic.production.power.station.order</field>
    <field name="arch" type="xml">
      <search>
        <field name="plant" />
      </search>
    </field>
  </record>

  <record id="photovoltaic_production_power_station_order_view_form" model="ir.ui.view">
    <field name="name">photovoltaic_production_power_station_order.form</field>
    <field name="model">photovoltaic.production.power.station.order</field>
    <field name="arch" type="xml">
      <form>
        <group colspan="4">
          <field name="plant" />
          <field name="position" />
        </group>
      </form>
    </field>
  </record>

  <record id="photovoltaic_production_power_station_order_action" model="ir.actions.act_window">
    <field name="name">Power station order</field>
    <field name="res_model">photovoltaic.production.power.station.order</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{ 'order_by': 'position' }</field>
  </record>

  <record id="menu_photovoltaic_production_power_station_order" model="ir.ui.menu">
    <field name="name">Power station order</field>
    <field name="sequence" eval="90"/>
    <field name="action" ref="photovoltaic_production_power_station_order_action"/>
    <field name="parent_id" ref="photovoltaic_production_menu"/>
  </record>

</odoo>
