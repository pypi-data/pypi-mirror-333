{
  "name": "ncreview",
  "version": "0.1.0",
  "description": "ARM - ncreview: A web-based viewer for ncreview data. ncreview compares netCDF files between two directories or summarizes from single directory.",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "homepage": "/",
  "dependencies": {
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "clsx": "^1.2.1",
    "d3": "^7.8.2",
    "formik": "^2.2.9",
    "highcharts": "^9.3.3",
    "highcharts-react-official": "^3.1.0",
    "mobx": "^6.7.0",
    "mobx-react": "^7.6.0",
    "papaparse": "^5.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/d3": "^7.4.0",
    "@types/jest": "^29.4.0",
    "@types/material-ui": "^0.21.12",
    "@types/node": "^15.14.9",
