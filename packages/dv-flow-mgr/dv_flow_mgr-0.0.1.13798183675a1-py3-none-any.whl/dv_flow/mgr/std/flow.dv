  #   - name: id
  #     type: str
  #     kind: metadata
  #     doc: |
  #       Unique identiifer 

  - name: Env
    doc: |
      Environment variables
    with:
    - name: doc

  - name: FileSet
    uses: TaskDataItem
    with:
    - name: kind
      value: "FileSet"
    - name: base
      type: str
    - name: fileType
      type: str
    - name: files
      type: 
        list:
          item:
            type: str

