
# yaml-language-server: $schema=https://dv-flow.github.io/dv-flow.schema.json

package:
  name: std

  tasks:
  - name: Message
    pytask: dv_flow.mgr.std.message.Message
    with:
      msg:
        type: str
        value: ""
  - name: FileSet
    pytask: dv_flow.mgr.std.fileset.FileSet
    passthrough: true
    with:
      base:
        type: str
        value: ""
      type:
        type: str
        value: ""
      incdirs:
        type: list
      include:
        type: str
        value: ""
      exclude:
        type: str
        value: ""
  - name: Exec
    pytask: dv_flow.mgr.std.exec.Exec
    with: 
      command:
        type: str
        value: ""
  types:
  # - name: TaskDataItem
