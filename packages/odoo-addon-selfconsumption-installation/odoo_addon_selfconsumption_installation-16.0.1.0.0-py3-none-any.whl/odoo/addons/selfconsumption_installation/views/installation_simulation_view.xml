<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="installation_simulation_tree" model="ir.ui.view">
        <field name="name">installation.simulation.tree</field>
        <field name="model">selfconsumption.installation.simulator</field>
        <field name="arch" type="xml">
            <tree create="0" default_order='blueprint'>
                <field name="installation_id"/>
                <field name="blueprint" optional="show"/>
                <field name="peak_power_simulation" optional="show"/>
                <field name="rated_power_simulation" optional="show"/>
                <field name="energy_consumed" optional="show"/>
                <field name="generator_energy" optional="show"/>
                <field name="self_consumption" optional="show"/>
                <field name="solar_cover" optional="show"/>
                <field name="annual_perfomance" optional="show"/>
                <field name="shading" optional="show"/>
                <field name="co2_avoided" optional="show"/>
                <field name="pvsol_notes" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="selfconsumption_installation_simulator_form" model="ir.ui.view">
        <field name="name">selfconsumption_installation.simulator.form</field>
        <field name="mode">primary</field>
        <field name="model">selfconsumption.installation.simulator</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="blueprint"/>
                        <field name="rated_power_simulation"/>
                        <field name="peak_power_simulation"/>
                        <field name="energy_consumed"/>
                        <field name="generator_energy"/>
                    </group>
                    <group>
                        <field name="self_consumption"/>
                        <field name="solar_cover"/>
                        <field name="annual_perfomance"/>
                        <field name="shading"/>
                        <field name="co2_avoided"/>
                    </group>

                </group>
                <group string='Inverters'>
                    <field name='inverter_ids' nolabel='1' colspan='2'>
                        <tree editable='1'>
                            <field name='inverter_id' options="{'no_create': True, 'no_create_edit':True}"/> 
                            <field name='power'/> 
                        </tree>
                    </field>
                </group>
                <group string='Modules'>
                    <field name='module_ids' nolabel='1' colspan='2'>
                        <tree editable='1'>
                            <field name='module_id' options="{'no_create': True, 'no_create_edit':True}"/> 
                            <field name='power'/> 
                            <field name='number_of_modules'/> 
                        </tree>
                    </field>
                </group>
                <group string="Notas PVSOL">
                    <field nolabel="1" name="pvsol_notes" colspan='2' />
                </group>
            </form>
        </field>
    </record>

    
    <record id="installation_simulation_action" model="ir.actions.act_window">
        <field name="name">Simulación</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">selfconsumption.installation.simulator</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window.view" id="action_installation_simulation">
        <field name="view_mode">tree</field>
        <field name="view_id" ref="installation_simulation_tree"/>
        <field name="act_window_id" ref="installation_simulation_action"/>
    </record>
    <menuitem
        id="installation_simulation"
        parent="installation_extra_views"
        action="installation_simulation_action"
        name="Simulación"
    />
</odoo>
