<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <record id="view_mail_template_category_tree" model="ir.ui.view">
    <field name="name">Template categories</field>
    <field name="model">mail.template.category</field>
    <field eval="6" name="priority"/>
    <field name="arch" type="xml">
      <tree string="Template categories">
        <field name="display_name"/>
      </tree>
    </field>
  </record>

  <record id="view_mail_template_category_form" model="ir.ui.view">
    <field name="name">Template categories</field>
    <field name="model">mail.template.category</field>
    <field name="arch" type="xml">
      <form string="Template categories">
        <sheet>
          <group col="4">
            <field name="name"/>
            <field name="active" widget="boolean_toggle"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_mail_template_category_search" model="ir.ui.view">
    <field name="name">mail.template.category.view.search</field>
    <field name="model">mail.template.category</field>
    <field name="arch" type="xml">
      <search string="Search template category">
        <field name="name"/>
        <field name="display_name"/>
        <separator/>
        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
      </search>
    </field>
  </record>

  <record id="action_mail_template_category_form" model="ir.actions.act_window">
    <field name="name">Template categories</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">mail.template.category</field>
    <field name="search_view_id" ref="view_mail_template_category_search"/>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a Category
      </p>
      <p>
        Assign categories to your mail templates to filter them.
      </p>
    </field>
  </record>

  <menuitem id="mail_template_category_menu" parent="base.menu_email" name="Template categories" action="action_mail_template_category_form" sequence="20"/>
</odoo>
