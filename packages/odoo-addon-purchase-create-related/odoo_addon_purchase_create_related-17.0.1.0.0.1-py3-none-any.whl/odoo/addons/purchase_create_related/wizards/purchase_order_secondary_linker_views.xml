<odoo>

    <record id="purchase_order_secondary_linker_form" model="ir.ui.view">
        <field name="name">purchase.order.secondary.linker.form</field>
        <field name="model">purchase.order.secondary.linker</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="main_purchase_ids" widget="many2many_tags" />
                    <field name="operation_type" />
                    <field
                        name="secondary_purchase_id"
                        invisible="operation_type != 'link'"
                        required="operation_type == 'link'"
                    />
                    <field
                        name="partner_id"
                        invisible="operation_type != 'create'"
                        required="operation_type == 'create'"
                    />
                </group>
                <footer>
                    <button
                        name="action_accept"
                        type="object"
                        string="Accept"
                        class="oe_highlight"
                    />
                    or
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record
        id="purchase_order_secondary_linker_wizard_action"
        model="ir.actions.act_window"
    >
        <field name="name">Create/Link Secondary Purchases</field>
        <field name="res_model">purchase.order.secondary.linker</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
