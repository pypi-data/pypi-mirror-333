<odoo>

    <record id="purchase_order_form_hide_line" model="ir.ui.view">
        <field name="name">purchase.order.form.hide.line</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="hide_in_report" optional="show" />
            </xpath>
        </field>
    </record>

</odoo>
