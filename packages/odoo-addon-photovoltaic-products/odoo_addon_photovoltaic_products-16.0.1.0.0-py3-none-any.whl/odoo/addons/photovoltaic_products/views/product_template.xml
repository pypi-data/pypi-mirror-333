<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_photovoltaic_products_product_form" model="ir.ui.view">
        <field name="name">view.photovoltaic.products.product.form</field>
        <field name="model">product.template</field>
        <field name='inherit_id' ref='product.product_template_form_view'/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='general_information']" position="after">
                <page string="Technical characteristics" name='technical_characteristics_inverter' attrs="{'invisible':[('inverter_id','=', False)]}" >
                    <group name="main">
                        <group>
                            <field name="inverter_id"/>
                            <field name="manufacturer"/>
                            <field name="rated_power_ac" />
                            <field name="maximum_power_dc" />
                            <field name="startup_voltage_dc" />
                            <field name="lower_voltage_limit_mpp" />
                            <field name="upper_voltage_limit_mpp" />
                            <field name="max_voltage_dc" />
                            <field name="in_dc" />
                            <field name="maximun_current_dc" />
                            <field name="vac" />
                        </group>
                        <group>
                            <field name="maximun_current_ac" />
                            <field name="power_factor" />
                            <field name="number_of_phases" />
                            <field name="inverter_type" />
                            <field name="number_of_mppt_trackers" />
                            <field name="maximum_current_per_mppt" />
                            <field name="maximum_icc_per_mppt" />
                            <field name="pv_inputs_per_mppt" />
                            <field name="total_pv_inputes" />
                            <field name="connectivity" />
                            <field name="monitoring_portal" widget='url'/>
                        </group>
                    </group>
                </page>
                <page string='Technical characteristics' name='technical_characteristics_module' attrs="{'invisible':[('module_id','=', False)]}">
                    <group name="main">
                    <group>
                        <field name="module_id" optional="show" />
                        <field name="manufacturer" optional="show" />
                        <field name="max_voltage" optional="show" />
                        <field name="max_current" optional="show" />
                        <field name="short_circuit_current" optional="show" />
                        <field name="power" optional="show" />
                        <field name="open_circuit_voltage" optional="show" />
                        <field name="temperature_coeficient" optional="show" />
                    </group>
                    <group>
                        <field name="tonc" optional="show" />
                        <field name="min_temperature" optional="show" />
                        <field name="max_temperature" optional="show" />
                        <field name="min_ambient_temperature" optional="show" />
                        <field name="max_ambient_temperature" optional="show" />
                        <field name="uoc" optional="show" />
                        <field name="umpp_min" optional="show" />
                        <field name="umpp_max" optional="show" />
                        <field name="maximum_system_voltage" optional="show" />
                        <field name="maximum_fuse_rating" optional="show" />
                    </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>