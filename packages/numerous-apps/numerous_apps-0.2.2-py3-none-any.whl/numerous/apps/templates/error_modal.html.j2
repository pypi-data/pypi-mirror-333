<div id="error-modal" class="error-modal" style="display: none;">
    <div class="error-modal-content">
        <div class="error-header">
            <span class="error-title">⚠️ Error</span>
            <button class="close-button" onclick="document.getElementById('error-modal').style.display='none'">×</button>
        </div>
        <pre id="error-modal-message"></pre>
        <button class="dismiss-button" onclick="document.getElementById('error-modal').style.display='none'">Dismiss</button>
    </div>
</div>